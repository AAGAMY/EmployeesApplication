@model Employee
@{
    //ViewData["Title"] = Model != null ? "Edit" : "Create";
    ViewBag.Title = Model != null ? "Edit" : "Create";
}

<h2>@ViewBag.Title Employee</h2>

<form action="@ViewBag.Title" method="post">
    <div asp-validation-summary="All"></div>

    <div class="col-lg-4">
        <label asp-for="EmployeeId" class="control-lable"></label>
        <input asp-for="EmployeeId" class="form-control" readonly/>
    </div>


    <div class="col-lg-4">
        <label asp-for="EmployeeNumber" class="control-lable"></label>
        <input asp-for="EmployeeNumber" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="EmployeeName" class="control-lable"></label>
        <input asp-for="EmployeeName" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="DOB" class="control-lable"></label>
        <input asp-for="DOB" class="form-control" />
    </div>
    <div class="col-lg-4">

        <label asp-for="HiringDate" class="control-lable"></label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <div class="col-lg-4">

        <label asp-for="GroosSalary" class="control-lable"></label>
        <input asp-for="GroosSalary" class="form-control" />
    </div>
    <div class="col-lg-4">

        <label asp-for="NetsSalary" class="control-lable"></label>
        <input asp-for="NetsSalary" class="form-control" />
    </div>
    <div class="col-lg-4">

        <label asp-for="DepartmentName" class="control-lable"></label>
        <select asp-for="Departmentid" asp-items="@(new SelectList(ViewBag.Departments,"DepartmentId",
    "DepartmentName"))" class="form-control">
            <option value="">Select Department</option>
        </select>
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>



</form>